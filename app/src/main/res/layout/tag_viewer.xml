<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tag Reading"
        android:id="@+id/textView"
        android:gravity="center"
        android:textColor="#ff080691" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tag ID:"
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="#ff6511a6" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tech List:"
            android:id="@+id/textView3"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#ff6511a6" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="..."
            android:id="@+id/tvTech"
            android:layout_row="1"
            android:layout_column="1"
            android:gravity="center"
            android:textColor="#ff808080" />

        <TextView
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mem. Info:"
            android:id="@+id/textView4"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="#ff6511a6" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="..."
            android:id="@+id/tvId"
            android:layout_row="0"
            android:layout_column="1"
            android:gravity="center"
            android:textColor="#ff808080" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="..."
            android:id="@+id/tvMem"
            android:layout_row="2"
            android:layout_column="1"
            android:gravity="center"
            android:textColor="#ff808080" />

        <TextView
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Read Time:"
            android:id="@+id/textView5"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#ff6511a6" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="..."
            android:id="@+id/tvTime"
            android:layout_row="3"
            android:layout_column="1"
            android:gravity="center"
            android:textColor="#ff808080" />
    </GridLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:id="@+id/dataList"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.86" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Value"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:onClick="openWriter"/>

    </LinearLayout>


</LinearLayout>